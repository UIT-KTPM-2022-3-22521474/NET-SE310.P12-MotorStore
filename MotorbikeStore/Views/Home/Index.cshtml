	<!--featured-cars start -->
	<section id="featured-cars" class="featured-cars">
		<div class="container">
			<div class="section-header">
				<p>checkout <span>the</span> featured motorbikes</p>
				<h2>featured motorbike</h2>
			</div><!--/.section-header-->
			<div class="featured-cars-content">
				<div class="row">
					@foreach (var motorbike in Model)
					{
						<div class="col-lg-3 col-md-4 col-sm-6">
							<div class="single-featured-cars">
								<div class="featured-img-box">
									<div class="featured-cars-img">
										<img src="~/images/@motorbike.ImageUrl" alt="cars">
									</div>
									<div class="featured-model-info">
										<p>
											
											motorbike
										</p>
									</div>
								</div>
								<div class="featured-cars-txt">
									<h2><a href="#">@motorbike.Name</a></h2>
									<p class="card-text">
										<strong>Price:</strong> @motorbike.Price.ToString("C", new CultureInfo("vi-VN"))
									</p>

									@Html.ActionLink("View Details", "Details", "Home", new { id = motorbike.MotorbikeId }, new { @class = "" })

								</div>
							</div>
						</div>
					}
					
				</div>
			</div>
		</div><!--/.container-->

